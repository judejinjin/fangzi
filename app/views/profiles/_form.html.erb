<% header =   t :my_settings %>
<% @profile = current_user.user_profile %>
<% action_path =  profile_url(params[:id]) + "#_=_" %>
<% action = "PATCH" %>

<h2><%= header %></h2>
<br>

<form action="<%= action_path %>"  enctype="multipart/form-data" method="POST">
  <%= auth_token %>
	<%= action_modifier(action) %>
	<label>
    <%= t :my_name %>:
    <input type="text" name="profile[name]" value="<%= @profile.name %>" class="small-input">
  </label>
  <br>
  <label>
    <%= t :brokerage%>:
    <input type="text" name="profile[brokerage]" value="<%= @profile.brokerage %>" class="small-input">
  </label>
	<br>
  <label>
    <%= t :phone%>:
    <input type="text" name="profile[phone]" value="<%= @profile.phone %>" class="small-input">
  </label>
	<br>
  <label>
    <%= t :email%>:
    <input type="text" name="profile[emailcontact]" value="<%= @profile.emailcontact %>" class="small-input">
  </label>
  <br>
  <br>
  <label>
    <%= t :my_pic %>:<br>
  </label>

  <div id="profile-photo-container">
        <img src="<%= @profile.photo.url(:big) %>" id="profile-photo-default" class="current-image">
    <div class="profile-photo-button-container">
      <input type="file" name="profile[photo]" id="profile-photo-upload"><br>
      <button class="profile-photo-button">Upload Portrait 上传头像</button>
    </div>
  </div>

	<button><%= t :submit%></button>
</form>
